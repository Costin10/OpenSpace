{
  "name": "openspace",
  "version": "0.1.0",
  "private": true,
  "description": "Linux-first Tauri v2 + React + TypeScript skeleton",
  "bin": {
    "openspace": "scripts/openspace"
  },
  "scripts": {
    "dev": "tauri dev",
    "dev:web": "python3 -m http.server 1420 --directory bridgespace-bundle",
    "dev:web:vite": "vite --config vite.config.ts",
    "build": "npm run typecheck && tauri build",
    "build:web": "rm -rf dist && mkdir -p dist && cp -a bridgespace-bundle/. dist/",
    "build:web:vite": "vite build --config vite.config.ts",
    "preview": "python3 -m http.server 4173 --directory dist",
    "typecheck": "tsc --noEmit -p tsconfig.node.json && tsc --noEmit -p tsconfig.web.json"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^5.5.0",
    "codemirror": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^20.17.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  }
}
